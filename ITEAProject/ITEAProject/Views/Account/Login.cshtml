@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@model AccountLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@accessor.HttpContext.Request.Query["ReturnUrl"].ToString()" method="post">

    <span asp-validation-for="UserName" class="text-danger"></span>
    <label asp-for="UserName"></label><br>
    <input asp-for="UserName" type="text" /><br>

    <span asp-validation-for="Password" class="text-danger"></span>
    <label asp-for="Password"></label><br>
    <input asp-for="Password" type="password" /><br>

    <label asp-for="RememberMe">Remember Me</label><br>
    <input asp-for="RememberMe" type="checkbox" value="true"/><br>

    <button type="submit">Login</button>
</form>